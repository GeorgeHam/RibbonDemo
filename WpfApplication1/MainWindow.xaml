<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:r="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <r:Ribbon>
            <r:RibbonTab x:Name="HomeTab" Header="Home" KeyTip="H">
                <r:RibbonGroup x:Name="Tools" Header="Tools" KeyTip="CA">
                    <r:RibbonButton x:Name="AssetBrowser" Label="AssetBrowser"
                                      LargeImageSource="Resources\70.png" ToolTipTitle="Browser">
                        

                    </r:RibbonButton>
                    <r:RibbonButton x:Name="AssetBuild" Label="AssetBuild"
                                   Command="" >

                    </r:RibbonButton>
                </r:RibbonGroup>
            </r:RibbonTab>
        </r:Ribbon>
    </Grid>
</Window>
